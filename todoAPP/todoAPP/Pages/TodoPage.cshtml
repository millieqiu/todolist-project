@page
@model todoAPP.Pages.TodoPageModel
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="CSS/normalize.css">
    <link rel="stylesheet" href="css/style.css">
    <script src="https://kit.fontawesome.com/c31150b190.js" crossorigin="anonymous"></script>
    <script src="~/js/todoList.js" asp-append-version="true"></script>
</head>

<body>

    <!-- Header 樣式 -->
    <header class="header">
        <a href="">
            <h1 class="h1 brand-color-main">TO DO LIST</h1>
        </a>
        <button class="button-sm button-outlined" onclick="onClickLogout()">登出</button>
    </header>

    <!-- Main 區塊 -->
    <section class="section">
        <div class="main flex-center">
            <h2 class="h2 brand-color-drak"><span id="user_name"></span>，使用 To-do 規劃美好的一天。</h2>
            <div class="list-container">
                <form action="">
                    <div class="add-container">
                        <input type="text" class="add-input paragraph1 gray-03" id="todoText" placeholder="添加你的待辦事項...">
                        <button class="button-mid button-primary" onClick="onClickCreateTodoItem()">新增</button>
                    </div>
                </form>
                <div class="list" id="todolist">
                    
                    
                    
                </div>
            </div>
            <div id="pagination" class="pagenumbers"></div>
        </div>

    </section>

</body>

</html>