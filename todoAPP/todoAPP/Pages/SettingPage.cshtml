@page
@model todoAPP.Pages.SettingPageModel
@{
    ViewData["Title"] = "Setting";
}

<section class="section" id="setting">
    {{message}}
    <div class="avatar-container flex-colum-center">
        <h2 class="heading2 text-secondary h2-font-size">更換大頭照</h2>
        <form class="avatar-form flex-colum-center" v-on:submit.prevent="">
            <img class="avatar border border-3 border-secondary" />
            <div class="avatar-button flex-align-center">
                <input id="imageInput" type="file" accept="image/*" />
                <label for="imageInput" class="button-sm btn btn-primary text-white">選擇檔案</label>
                <button class="button-sm btn btn-primary text-white" v-on:click.prevent="" disabled>確認上傳</button>
            </div>
        </form>
    </div>
</section>

<script type="module" src="~/dist/setting.js" asp-append-version="true"></script>