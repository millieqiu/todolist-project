@page
@model todoAPP.Pages.RegisterModel
@{
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link rel="stylesheet" href="CSS/normalize.css">
    <link rel="stylesheet" href="css/style.css">
</head>

<body>

    <!-- Header 樣式 -->
    <header class="header">
        <a href="">
            <h1 class="h1 brand-color-main">TO DO LIST</h1>
        </a>
    </header>

    <!-- Main 樣式 -->
    <section class="section">
        <div class="main flex-center">
            <div class="form-container flex-column">
                <form class="flex-column" action="">
                    <h2 class="h2 brand-color-drak">初次見面，很高興認識你 :)</h2>
                    <input-container class="input-container flex-column">
                        <div class="flex-column">
                            <label class="paragraph2" for="">姓名 / 暱稱</label>
                            <input class="input gray-02 paragraph1" type="text" name="name" id="name" placeholder="輸入姓名或暱稱" required>
                        </div>
                        <div class="flex-column">
                            <label class="paragraph2" for="">設定密碼</label>
                            <input class="input gray-02 paragraph1" type="password" name="password" id="password"
                                   placeholder="請設定輸入密碼" pattern="[a-zA-Z0-9]{8,}" oninput="setCustomValidity('');"
                                   oninvalid="setCustomValidity('請使用英數且至少八個字元')" required>
                        </div>
                        <div class="flex-column">
                            <label class="paragraph2" for="">確認密碼</label>
                            <input class="input gray-02 paragraph1" type="password" name="password" id="confirm-password"
                                   placeholder="請再次輸入密碼" oninput="setCustomValidity('');"
                                   onchange="if(document.getElementById('password').value != document.getElementById('confirm-password').value){setCustomValidity('密碼不符合');}"
                                   required>
                        </div>
                    </input-container>
                    <div class="btn-container">
                        <button class="button-lg button-primary">下一步</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

</body>

</html>